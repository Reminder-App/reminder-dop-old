
<configurationModel>
	<configuration>
		<expression>Reminder App</expression>
		<transformation>
			<name>selectAllComponents</name>
			<args>-</args>
		</transformation>
		<transformation>
			<name>preprocessFiles</name>
			<args>AndroidManifest, ReminderMainActivity, ReminderAdd, ReminderRow, RemindersListFragment, Strings, ActionBarMenu</args>
		</transformation>
		<transformation>
			<name>removeComponents</name>
			<args>SPLInfoFolder, DeltasFolder</args>
		</transformation>
	</configuration>
	<configuration>
		<expression>Or(Manage Category, Static Category)</expression>
		<transformation>
			<name>createBuildEntries</name>
			<args>category</args>
		</transformation>
	</configuration>
  <configuration>
		<expression>Search</expression>
		<transformation>
			<name>createBuildEntries</name>
			<args>search</args>
		</transformation>
	</configuration>
  <configuration>
		<expression>Not(Search)</expression>
		<transformation>
			<name>removeComponents</name>
			<args>SearchIconHdpi, SearchIconLdpi, SearchIconMdpi, SearchIconXhdpi, SearchReminderDialogLayout</args>
		</transformation>
	</configuration>
	<configuration>
		<expression>Manage Category</expression>
		<transformation>
			<name>createBuildEntries</name>
			<args>manageCategory</args>
		</transformation>
	</configuration>
	<configuration>
		<expression>Static Category</expression>
		<transformation>
			<name>createBuildEntries</name>
			<args>staticCategory</args>
		</transformation>
	</configuration>
	<configuration>
		<expression>Not(Or(Or(Manage Category, Static Category), Reminder Priority))</expression>
		<transformation>
			<name>removeComponents</name>
			<args>CategoriesList, CategoryRow</args>
		</transformation>
	</configuration>
	<configuration>
		<expression>Not(Manage Category)</expression>
		<transformation>
			<name>removeComponents</name>
			<args>CategoryDialog, CategoryListFragmentContextMenu</args>
		</transformation>
	</configuration>
	<configuration>
		<expression>Reminder Priority</expression>
		<transformation>
			<name>createBuildEntries</name>
			<args>priority</args>
		</transformation>
	</configuration>
	<configuration>
		<expression>Google Calendar</expression>
		<transformation>
			<name>createBuildEntries</name>
			<args>googleCalendar</args>
		</transformation>
	</configuration>
	<configuration>
		<expression>Date Range</expression>
		<transformation>
			<name>createBuildEntries</name>
			<args>dateRange</args>
		</transformation>
	</configuration>
	<configuration>
		<expression>Fixed Date</expression>
		<transformation>
			<name>createBuildEntries</name>
			<args>fixedDate</args>
		</transformation>
	</configuration>
</configurationModel>
